<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h3>Welcome,<%= current_user.username %></h3>
<h4>Here are all the posted questions from every users</h4>
<h4>Questions:</h4>
<ul>
  <% @questions.each do |q| %>
      <a href="/users/<%=q.user_id%>"><li><%= q.content %></li><a>
  <% end %>
</ul>
