<!--  Posted Question-->
<div class="jumbotron">
  <h3>Question:</h3>
</div>
<h4><%= current_question.content %></h4>

  <!-- Option to delete question -->
  <form action="/questions/<%=current_question.id%>/delete" method="POST">
    <input id="hidden" type="hidden" name="_method" value="DELETE">
    <button type="submit" class="btn btn-default">Delete Question</button>
  </form>
  <!-- Option to edit question -->
  <button type="submit" class="btn btn-default"><a href="/questions/<%=current_question.id%>/edit">Edit Question</a></button>
