<div class="jumbotron">
<h3> <%= " #{current_amendment.name}"%></h3>
</div>
<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item"><%= current_amendment.content %></li>
      <form action="/users/amendment/<%=current_amendment.id%>" method="POST">
        <div class="form-group">
          <input id="hidden" type="hidden" name="_method" value="PATCH">
          <input type="hidden" name="content" value="<%= current_amendment.content %>" class="form-control">
          <button type="submit" class="btn btn-danger">Save to your profile</button>
        </div>
      </form>
    </ul>
  </div>
</div>
