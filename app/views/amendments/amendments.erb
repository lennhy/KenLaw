  </div>
</form>

<div>
  <ol class = "amendments">
    <% @amendments.each_with_index do |a, i| %>

      <li><a href='<%="amendments/#{i+1}"%>'>
        <%= "#{a.name}: " + a.content %>
      </a></li><br>

    <% end %>
  </ol>
</div>
