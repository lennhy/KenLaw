<h3> Profile</h3>
<h5> Amendments</h5>
  <ul>
    <%current_user.amendments.each_with_index do |amendment, i| %>
    <li><a href='<%="amendments/#{i+1}"%>'>
    <%= "#{i+1}. #{amendment.name}" %><%=amendment.content%></a></li>

    <!-- Option to delete amendment -->
    <form action="/users_amendments/<%=amendment.id%>/delete" method="POST">
      <input id="hidden" type="hidden" name="_method" value="DELETE">
      <button type="submit" class="btn btn-default">Delete Question</button>
    </form>

<%end%>
</ul>

<h5>Questions</h5>
  <ul>
    <%current_user.questions.each_with_index do |question, i| %>
    <li><a href='<%="users_questions/#{i+1}"%>'>
    <%= "#{i+1}. #{question.content} " %></a></li>

    <!-- Option to delete question -->
    <form action="/users_questions/<%=question.id%>/delete" method="POST">
      <input id="hidden" type="hidden" name="_method" value="DELETE">
      <button type="submit" class="btn btn-default">Delete Question</button>
    </form>

    <!-- Option to edit question -->
    <button type="submit" class="btn btn-default"><a href="/users_questions/<%=question.id%>/edit">Edit Question</a></button>

<%end%>
</ul>
